        <Button Background="Beige" Foreground="Blue" FontWeight="Bold">Botón formateado</Button>
        <Separator Height="20" Margin="0" Background="Red"/>
        <!-- Colocándole imagen -->
        <Button Padding="5">
            <StackPanel Orientation="Horizontal">
             
                <TextBlock Margin="5,0">Ayuda</TextBlock>
            </StackPanel>
        </Button>
    </StackPanel>
</Window>
