<Window x:Class="Cuadros_de_diálogo_WPF.openfiledialog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cuadros_de_diálogo_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="openfiledialog">

    <DockPanel Margin="10">
        <WrapPanel HorizontalAlignment="Center" DockPanel.Dock="Top" Margin="0,0,0,10">
            <Button x:Name="button" Content="Abrir Archivo" Width="100" Height="50"
Click="button_Click" RenderTransformOrigin="0.227,0.567"/>
            <Button x:Name="button2" Content="Salvar Archivo" Width="100" Height="50"
Click="button_Click2"/>
        </WrapPanel>
        <TextBox Name="txtEditor" Margin="0,-5,0,0" />
    </DockPanel>

</Window>
